{{#each this}}
<li {{id}} class="card__item">
    <div class="card__thumb">
        <img class="card__photo" src="https://www.themoviedb.org/t/p/w500{{poster_path}}" alt="{{title}}" width="280" height="402">
    </div>
    <h2 class="card__title">{{original_title}}</h2>
    <div class="container__genre">
        <ul class="genre__list list">
            {{#each genre_ids}}
            <li class="card__genre">{{this}}</li>
            {{/each}}
        </ul>
        <p class="card__data"> | {{release_date}}</p>
    </div>
</li>
{{/each}}